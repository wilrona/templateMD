{% extends "base.twig" %}

{% block content %}

    <div class="uk-section uk-section-large uk-position-relative pb-0">
        <div class="uk-padding-large uk-padding-remove-vertical">

            <div class="uk-child-width-1-2@l uk-child-width-1-1 uk-grid-large" uk-grid="">
                <div>

                    <div class="uk-title uk-h3 uk-text-uppercase uk-margin-bottom">
                       {{ post.about_title }}
                    </div>

                    <div class="uk-subtitle uk-h2 uk-margin-remove">
                        {{ post.about_subtitle }}
                    </div>

                    <div class="uk-margin-medium-top">
                        {{ post.about_desc }}
                    </div>

                </div>
                <div class="uk-child-width-1-2@l" uk-grid="">

                    <div class="img-one">
                        <div uk-img  data-src="{{ Image(post.about_image_one) }}" class="uk-height-large uk-background-contain">

                        </div>
                    </div>

                    <div class="img-two md:mt-40">
                        <div uk-img  data-src="{{ Image(post.about_image_two) }}" class="uk-height-large uk-background-contain">

                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>

    <div class="uk-section uk-section-large uk-background-theme-light uk-position-relative">
        <div class="uk-container uk-container-small">
            <div class="svg-rounded svg-to-top">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 100" preserveAspectRatio="none">
                    <path class="svg-fill-white" d="M0,0c0,0,0,6,0,6.7c0,18,240.2,93.6,615.2,92.6C989.8,98.5,1000,25,1000,6.7c0-0.7,0-6.7,0-6.7H0z"></path>
                </svg>
            </div>

            <div class="owl-carousel owl-theme" id="owl-carousel">
                {% for how in post.how_about %}
                    <div class="item">
                        <div class="uk-child-width-1-2@l uk-child-width-1-1 uk-grid-large uk-margin-large-top" uk-grid="">
                            <div class="uk-margin-large-top">
                                <div class="uk-subtitle uk-h1 uk-margin-medium-bottom">
                                    {{ how.title }}
                                </div>

                                {{ how.content }}
                            </div>
                            <div class="uk-flex uk-flex-center uk-flex-middle uk-margin-large-top">
                                <img src="{{ Image(how.image) }}" alt="">
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

        </div>
    </div>

    <div class="uk-section">
        <div class="uk-padding-large uk-padding-remove-vertical">
            <div class="uk-grid uk-flex uk-flex-center uk-margin-bottom uk-padding uk-padding-remove-horizontal">
                <div class="uk-width-1-1">
                    <div class="uk-title uk-h2 uk-text-center uk-text-uppercase uk-text-blue">
                        {{ post.title_equipe }}
                    </div>

                </div>

                <div class="uk-width-4-5 uk-margin-large-top">
                    <div class="uk-content">
                        {{ post.content_equipe }}
                    </div>
                </div>
            </div>

            {% if post.liste_equipe %}

                <div uk-slider>

                    <div class="uk-position-relative uk-container uk-container-small">

                        <div class="uk-slider-container">
                            <ul class="uk-slider-items uk-child-width-1-1 uk-child-width-1-3@m uk-grid">
                                {% for equipe in post.liste_equipe %}
                                <li>
                                    <div>

                                        <div class="relative" style="padding-bottom: 100%;">
                                            <img src="{{ Image(equipe.image) }}" alt="" class=" uk-border-circle shadow-lg absolute w-full h-full object-cover">
                                        </div>


                                        <div class="uk-title uk-h4 uppercase text-center">
                                            {{ equipe.name }}
                                        </div>
                                        <div class="uk-text-blue uppercase text-center">
                                            {{ equipe.post }}
                                        </div>

                                    </div>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>

                        <div class="uk-hidden@s uk-light">
                            <a class="uk-position-center-left uk-position-small" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
                            <a class="uk-position-center-right uk-position-small" href="#" uk-slidenav-next uk-slider-item="next"></a>
                        </div>

                        <div class="uk-visible@s">
                            <a class="uk-position-center-left-out uk-position-small" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
                            <a class="uk-position-center-right-out uk-position-small" href="#" uk-slidenav-next uk-slider-item="next"></a>
                        </div>

                    </div>

                    <ul class="uk-slider-nav uk-dotnav uk-flex-center uk-margin"></ul>

                </div>

            {% endif %}
        </div>
    </div>




{% endblock %}