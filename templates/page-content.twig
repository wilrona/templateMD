{% extends "base.twig" %}

{% block heading %}

    <div class="">
        {% include 'menu.twig' %}
    </div>

    <div class="z-10 relative border-t-4 border-b-4 border-0 border-primary border-solid" uk-height-viewport="offset-top: true">
        <div class="mx-auto uk-width-1-1 h-full md:absolute">
            <div uk-grid class="uk-grid-collapse uk-child-width-1-2@m h-full before:bg-black before:bg-opacity-60 before:absolute before:inset-0 before:z-10">

                <div class="uk-background-cover uk-flex md:items-end items-center uk-flex-bottom@m uk-flex-center@s md:pl-20 2xl:pl-44 h-screen md:h-full" style="background-image: url({{ post.thumbnail.src }});">

                    <div class="uk-grid-collapse uk-margin-bottom z-20 flex flex-col md:flex-row">
                        <div class="uk-width-auto flex items-end">
                            {% include 'social-icon.twig' %}
                        </div>
                        <div class="uk-width-expand md:px-10 px-6 uppercase border-0 md:border-l-4 border-primary border-solid md:space-y-5 space-y-10 uk-flex-last@m uk-flex-first">
                            <div class="text-4xl md:text-6xl font-rubik font-medium text-center md:text-left" uk-scrollspy="cls: uk-animation-slide-left-medium; delay: 300; repeat: false">
                                {{ post.hero_text_one }}
                            </div>
                            <div class="text-4xl md:text-4xl font-rubik font-medium text-primary text-center md:text-left" uk-scrollspy="cls: uk-animation-slide-left-medium; delay: 300; repeat: false">
                                {{ post.hero_text_two }}
                            </div>
                            <div class="h-48 hidden md:block"></div>
                        </div>

                    </div>

                </div>

                <div class="md:pr-20 2xl:pr-44 z-20 uk-flex uk-flex-center uk-flex-middle">
                    <div class="md:pl-24 2xl:pr-36 px-6 py-20">
                        <div>
                            <div class="mb-10 uk-flex uk-flex-column space-y-5" uk-scrollspy="cls: uk-animation-slide-right-medium; delay: 300; repeat: false">
                                <div class="text-primary text-4xl text-center">CONSULTATION</div>
                                <div class="text-2xl text-center">Gratuit</div>
                            </div>

                            <div uk-scrollspy="cls: uk-animation-slide-right-medium; delay: 300; repeat: false">
                                {{ post.contact_form|shortcodes }}
                            </div>

                        </div>
                    </div>
                </div>


            </div>

        </div>
    </div>



{% endblock %}

{% block content %}

    <div class="uk-section-large border-0 border-b-2 border-solid border-primary">
        <div class="uk-container">
            <h1 class="md:font-zapfino text-center text-primary text-4xl md:text-[120px] md:mb-24" uk-scrollspy="cls: uk-animation-slide-top-medium; delay: 600; repeat: true">{{ post.title }}</h1>

            {{ post.content }}

            {% if post.show_more %}
            <div uk-grid class="uk-grid my-14">
                <div class="{% if post.more_content %} uk-width-1-2@m {% else %} uk-width-1-1 {% endif %}">
                    {% if post.more_image %}
                        <img src="{{ Image(post.more_image) }}" alt="" class="uk-width-1-1 uk-height-max-large">
                    {% endif %}

                    {% if post.more_images %}
                    <div class="uk-position-relative uk-visible-toggle uk-light uk-margin-top" tabindex="-1" uk-slideshow="autoplay: true; finite: false; min-height: 400;">

                        <ul class="uk-slideshow-items">
                            {% for item in post.more_images %}
                            <li>
                                <img src="{{ Image(item.image) }}" alt="" uk-cover>
                                {% if item.title %}
                                <div class="uk-overlay uk-overlay-primary uk-position-bottom uk-text-center uk-transition-slide-bottom">
                                    {{ item.title }}
                                </div>
                                {% endif %}
                            </li>
                            {% endfor %}
                        </ul>

                        <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slideshow-item="previous"></a>
                        <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slideshow-item="next"></a>

                    </div>
                    {% endif %}
                </div>
                {% if post.more_content %}
                    <div class="uk-width-expand text-lg uk-text-justify italic" uk-scrollspy="cls: uk-animation-slide-right-medium; delay: 1000; repeat: true">
                        {{ post.more_content }}
                    </div>
                {% endif %}
            </div>

            {% endif %}

            {% if post.show_accordions %}
                {% if post.titre_accordion %}
                    <h3 class="text-center text-primary text-6xl md:mb-24 mb-10" uk-scrollspy="cls: uk-animation-slide-top-medium; delay: 1000; repeat: true">{{ post.titre_accordion }}</h3>
                {% endif %}

                <div class="my-20">
                    {% for item in post.accordions %}
                        <div>
                            {% if item.title_group %}
                            <div class="bg-primary text-black p-8 font-semibold text-2xl">
                                {{ item.title_group }}
                            </div>
                            {% endif %}

                            <ul uk-accordion class="m-0">
                                {% for elm in item.elements %}
                                <li>
                                    <a class="uk-accordion-title" href="#">{{ elm.title }}</a>
                                    <div class="uk-accordion-content">
                                        {{ elm.content }}
                                    </div>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>

    {% for item in post.sections %}

    {% if item.type == "img_left_one" or item.type == "img_right_one" %}
    <div class="uk-section-large border-0 border-b-2 border-solid border-primary">
        <div class="uk-container">
            <div class="uk-child-width-1-2@m uk-grid-large uk-flex uk-flex-middle" uk-grid>
                <div>
                    <div class="text-5xl" style="color: {{ item.color_title }}" uk-scrollspy="cls: uk-animation-slide-top-medium; delay: 1000; repeat: true">{{ item.title }}</div>
                    <div class="font-extralight font-sans text-2xl md:text-4xl my-10 italic" style="color: {{ item.color_content }}" uk-scrollspy="cls: uk-animation-slide-bottom-medium; delay: 1000; repeat: true">
                        {{ item.content }}
                    </div>
                </div>
                <div uk-scrollspy="cls: {% if item.type == "img_left_one" %}uk-animation-slide-left-medium{% else %}uk-animation-slide-right-medium{% endif %}; delay: 1000; repeat: true" class="uk-width-1-2@m uk-flex uk-flex-center uk-flex-middle {% if item.type == "img_left_one" %} uk-flex-first {% endif %}">
                    <img src="{{ Image(item.image) }}" alt="" class="uk-width-1-1">
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    {% if item.type == "img_left_two" or item.type == "img_right_two" %}
        <div style="background-color:{{ item.fond_color }};">
            <div class="">
                <div class="uk-child-width-1-3@m uk-grid-collapse" uk-grid>
                    <div class="uk-width-expand uk-section md:px-48 px-6">
                        <div class="text-4xl" style="color: {{ item.color_title }}" uk-scrollspy="cls: uk-animation-slide-top-medium; delay: 1000; repeat: true">{{ item.title }}</div>
                        <div class="font-extralight font-sans text-xl my-5 italic min-h-[400px] uk-flex-middle uk-flex" style="color: {{ item.color_content }}" uk-scrollspy="cls: uk-animation-slide-bottom-medium; delay: 1000; repeat: true">
                            <div>
                                {{ item.content }}
                            </div>
                        </div>
                    </div>
                    <div class="uk-width-1-3@m uk-cover-container uk-height-1-2 {% if item.type == "img_left_two" %} uk-flex-first@m uk-flex-last {% endif %}">
                        <img src="{{ Image(item.image) }}" alt="" class="uk-width-1-1" uk-cover>
                    </div>

                </div>
            </div>
        </div>
    {% endif %}

    {% endfor %}

{% endblock %}
