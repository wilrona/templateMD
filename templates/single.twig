{% extends "base.twig" %}

{% block content %}
	<!-- Breadcrumbs -->
	<div class="container">
		<div class="container">
			<ul class="breadcrumbs">
				{%  for key, menu in breadcrumbs %}
					<li class="breadcrumbs__item text-lowercase {% if menu.current %} breadcrumbs__item--current {% endif %}">
						{% if menu.current %}
							{{ menu.text }}
						{% else %}
							<a href="{{ menu.href }}" class="breadcrumbs__url">{{ menu.text }}</a>
						{% endif %}
					</li>
				{%  endfor %}
			</ul>
		</div>
	</div>

	<div class="main-container container" id="main-container">

		<!-- Content -->
		<div class="row">

			<!-- post content -->
			<div class="col-lg-8 blog__content mb-72">
				<div class="content-box">

					<!-- standard post -->
					<article class="entry mb-0">

						<div class="single-post__entry-header entry__header">

							<span class="entry__meta-category entry__meta-category--label entry__meta-category--red">
								{{ post.terms( {query:{taxonomy:'category', orderby:'name', order: 'ASC'}} )[0] }}
							</span>
							{% if(post.terms( {query:{taxonomy:'magazine', orderby:'name', order: 'ASC'}} )) %}
								<a href="{{ post.terms( {query:{taxonomy:'magazine', orderby:'name', order: 'ASC'}} )[0].link }}">
									<span class="entry__meta-category entry__meta-category--label entry__meta-category--blue">
									Parution dans le magazine Numero {{ post.terms( {query:{taxonomy:'magazine', orderby:'name', order: 'ASC'}} )[0].numero }}
									</span>
								</a>
							{% endif %}
							<h1 class="single-post__entry-title">
								{{ post.title }}
							</h1>

							<div class="entry__meta-holder">
								<ul class="entry__meta">
{#									<li class="entry__meta-author">#}
{#										<span>by</span>#}
{#										<a href="#">DeoThemes</a>#}
{#									</li>#}
									<li class="entry__meta-date">
										Publié le {{ post.date('j F Y') }}
									</li>
								</ul>

								<ul class="entry__meta">
									<li class="entry__meta-views">
										{{ function ('pp_setPostViews', post.ID) }}
										<i class="ui-eye"></i>
										<span>{{ function('pp_getPostViews', post.ID) }} vue(s)</span>
									</li>
									{% if post.download_file and post.user_can_read %}
									<li class="entry__meta-views">
										<a href="{{ post.download_file }}" target="_blank">
											<span>Télécharger l'article en PDF</span>
										</a>
									</li>
									{% endif %}
{#									<li class="entry__meta-comments">#}
{#										<a href="#">#}
{#											<i class="ui-chat-empty"></i>{{ post.comments|length }}#}
{#										</a>#}
{#									</li>#}
								</ul>
							</div>
						</div> <!-- end entry header -->

						<div class="entry__img-holder">
							<img src="{% if post.thumbnail %}{{ post.thumbnail.src | resize(1218, 609) }}{% else %}{{ site.theme.link }}/img/image-not-found.png{% endif %}" alt="" class="entry__img">
						</div>

						<div class="entry__article-wrap ">

							<!-- Share -->
							<div class="entry__share">
								<div class="sticky-col">
									{% filter shortcodes %}
										[aps-counter]
									{% endfilter %}
								</div>
							</div> <!-- share -->

							<div class="entry__article relative p" style="text-align: justify !important;">
								{% if post.download_file and post.user_can_read %}
									<div class="mb-4">
										<a href="{{ post.download_file }}" target="_blank" class="btn px-4">
											<span>Télécharge le magazine en PDF</span>
										</a>
									</div>
								{% endif %}

								{{ post.content }}

								{% if not post.user_can_read %}

									<div class="rcp-box my-4">
										<div class="row">
											<div class="col-12">

												<div class="d-flex justify-content-center">

													<h3 class="text-center mb-4">Le contenu de l'article est reservé au membre</h3>
												</div>

												<div class="col-12 text-center">
													{% if not function('get_current_user_id') %}
														<p><a class="btn btn-lg btn-color p-4" href="/membre">Inscrivez-vous</a></p>
													{% else %}
														<p><a class="btn btn-lg btn-color p-4" href="/membre/votre-abonnement/">Prenez un abonnement</a></p>
													{% endif %}
												</div>
												{% if not function("get_current_user_id") %}
													<div class="text-center col-12 my-2">
														<p><b>OU</b></p>
													</div>
													<div class="col-12 text-center">
														<p><a class="btn btn-lg btn-color p-4" href="/wp-login.php">Connectez-vous</a></p>
													</div>
												{% endif %}
											</div>

										</div>
									</div>

									{% if download_id %}
										<div class="rcp-box my-4">
											<div class="row">
												<div class="col-12">
													<h3 class="text-center">Obtenez l'article en pdf</h3>

													<div class="col-12 text-center h-100 d-flex align-items-center justify-content-center">
														<div>
															<p>
																<a class="btn btn-lg p-4" target="_blank" href="{{site.link}}?iproduct={{ download_id }}">
																	Payez votre article PDF <br>
																	<span style="font-size: 30px">{{ product_price }}
																		{% if function("function_exists", "isell_get_options") %}
																			{% set option = function("isell_get_options")  %}
																			{{ option.store.currency }}
																		{% endif %}
                                                    				</span>
																</a>
															</p>
															<br>

														</div>
													</div>
												</div>

											</div>
										</div>
									{% endif %}

								{% endif %}

							</div>
						</div> <!-- end entry article wrap -->

						<!-- Prev / Next Post -->
						<nav class="entry-navigation">
							<div class="clearfix">
								{% if post.prev %}
								<div class="entry-navigation--left">
									<i class="ui-arrow-left"></i>
									<span class="entry-navigation__label">Article Precedent</span>
									<div class="entry-navigation__link">
										<a href="{{ post.prev.link }}" rel="next">{{ post.prev.title }}</a>
									</div>
								</div>
								{% endif %}

								{% if post.next %}
								<div class="entry-navigation--right">
									<span class="entry-navigation__label">Article Suivant</span>
									<i class="ui-arrow-right"></i>
									<div class="entry-navigation__link">
										<a href="{{ post.next.link }}" rel="prev">{{ post.next.title }}</a>
									</div>
								</div>
								{% endif %}
							</div>
						</nav>


						<!-- Related Posts -->
						<section class="section related-posts mt-40 mb-0">
							<div class="title-wrap title-wrap--line title-wrap--pr">
								<h3 class="section-title">Articles similaires</h3>
							</div>

							<!-- Slider -->
							<div id="owl-posts-3-items" class="owl-carousel owl-theme owl-carousel--arrows-outside">
								{% for item in related %}
								<article class="entry thumb thumb--size-1">
									<div class="entry__img-holder thumb__img-holder" style="background-image: url('{% if item.thumbnail %}{{ item.thumbnail.src }}{% else %}{{ site.theme.link }}/img/image-not-found.png{% endif %}');">
										<div class="bottom-gradient"></div>
										<div class="thumb-text-holder">
											<h2 class="thumb-entry-title">
												<a href="{{ item.link }}">{{ item.title }}</a>
											</h2>
										</div>
										<a href="{{ item.link }}" class="thumb-url"></a>
									</div>
								</article>
								{% endfor %}
							</div> <!-- end slider -->

						</section> <!-- end related posts -->

					</article> <!-- end standard post -->

